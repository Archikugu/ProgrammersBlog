@model ProgrammersBlog.Entities.Dtos.CommentDtos.CommentAddDto

<div class="card my-4">
	<h5 class="card-header">Add a comment:</h5>
	<div class="card-body form-card">
		<form asp-controller="Comment" asp-action="Add" method="post" id="form-comment-add">
			<input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
			<div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display: none;"></div>
			<input asp-for="ArticleId" type="hidden" />
			<div class="form-group">
				<label asp-for="CreatedByName">Your Name:</label>
				<input type="text" asp-for="CreatedByName" class="form-control" placeholder="Enter your name..." />
			</div>
			<div class="form-group">
				<label asp-for="Text">Your Comment:</label>
				<textarea class="form-control" rows="3" asp-for="Text" placeholder="Write your comment here..."></textarea>
			</div>
			<button type="button" class="btn btn-primary" id="btnSave">Add Comment</button>
		</form>
	</div>
</div>

