@using ProgrammersBlog.Core.Entities.Concrete
@model ProgrammersBlog.Core.Entities.Concrete.MvcErrorModel
@{
	Layout = "_ErrorLayout";
	ViewBag.Title = "Internal Server Error (500)";
}
<div class="col-lg-12">
	<div class="text-center mt-4">
		<h1 class="display-1">500</h1>
		<p class="lead">@Model.Message</p>
		@if (Model.Detail != null)
		{
			<p class="lead">@Model.Detail</p>
		}
		<a asp-controller="Home" asp-action="Index" class="text-warning">
			<i class="fas fa-arrow-left mr-1"></i>
			Click here to return to the homepage.
		</a>
	</div>
</div>