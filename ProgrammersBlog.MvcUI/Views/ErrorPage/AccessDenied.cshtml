@{
	Layout = null;
	ViewData["Title"] = "403 Forbidden";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<title>@ViewData["Title"] - Programmers Blog</title>

	<link rel="icon" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/svgs/solid/ban.svg" type="image/svg+xml">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

	<link href="~/css/errorPage.css" rel="stylesheet">
</head>

<body>
	<div class="wave"></div>
	<div class="wave"></div>
	<div class="wave"></div>

	<div class="error-container">
