@using ProgrammersBlog.Entities.Dtos.UserDtos
@model UserAddDto

<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header bg-primary">
				<h5 class="modal-title"><span class="fas fa-square-plus"></span> Add User</h5>
				<button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<form asp-action="Add" id="form-user-add" enctype="multipart/form-data">
					<input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
					<div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display: none;"></div>

					<!-- Username -->
					<div class="form-group mb-3">
						<label asp-for="UserName"></label>
						<div class="input-group">
							<span class="input-group-text"><i class="fas fa-user"></i></span>
							<input class="form-control" asp-for="UserName" placeholder="Please enter your username" />
						</div>
						<span class="text-danger" asp-validation-for="UserName"></span>
					</div>

					<!-- Email -->
					<div class="form-group mb-3">
						<label asp-for="Email"></label>
						<div class="input-group">
							<span class="input-group-text"><i class="fas fa-envelope"></i></span>
							<input type="email" class="form-control" asp-for="Email" placeholder="Please enter your email" />
						</div>
						<span class="text-danger" asp-validation-for="Email"></span>
					</div>

					<!-- Password -->
					<div class="form-group mb-3">
						<label asp-for="Password"></label>
						<div class="input-group">
							<span class="input-group-text"><i class="fas fa-lock"></i></span>
							<input type="password" class="form-control" asp-for="Password" placeholder="Please enter your password" />
						</div>
						<span class="text-danger" asp-validation-for="Password"></span>
					</div>

					<!-- Phone Number -->
					<div class="form-group mb-3">
						<label asp-for="PhoneNumber"></label>
						<div class="input-group">
							<span class="input-group-text"><i class="fas fa-phone"></i></span>
							<input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Please enter your phone number" />
						</div>
						<span class="text-danger" asp-validation-for="PhoneNumber"></span>
					</div>

					<!-- Picture File -->
					<div class="form-group mb-3">
						<label asp-for="PictureFile"></label>
						<div class="input-group">
							<span class="input-group-text"><i class="fas fa-image"></i></span>
							<input type="file" accept="image/*" class="form-control" asp-for="PictureFile" />
						</div>
						<span class="text-danger" asp-validation-for="PictureFile"></span>
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-success btn-block" id="btnSave">
					<span class="fas fa-save"></span> Add User
				</button>
				<button type="button" class="btn btn-danger btn-block" data-bs-dismiss="modal">
					<span class="fas fa-times"></span> Cancel
				</button>
			</div>
		</div>
	</div>
</div>
