@using ProgrammersBlog.Entities.Dtos.UserDtos
@model UserLoginDto
@{
	ViewData["Title"] = "User Login";
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<title>@ViewData["Title"] - Programmers Blog</title>
	<link rel="icon" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/svgs/solid/blog.svg" type="image/svg+xml">
	<!-- Bootstrap 5.3.3 -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
	<!-- Font Awesome 6.5.0 -->
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

	<link href="~/css/userLogin.css" rel="stylesheet">
</head>

<body class="bg-dark d-flex flex-column min-vh-100">
	<div class="d-flex justify-content-center align-items-center flex-grow-1">
		<section class="w-100 text-white flex-grow-1" style="max-width:960px;">
			<div class="container-fluid h-custom">
				<div class="row d-flex justify-content-center align-items-center h-100">
					<div class="col-md-9 col-lg-6 col-xl-5">
						<img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
							 class="img-fluid" alt="Login illustration">
					</div>

					<div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1 shadow-lg p-4 rounded-4 bg-dark">

						<h3 class="text-center mb-4">Welcome Back!</h3>

						<form asp-controller="User" asp-action="Login" method="post" novalidate>
							<div asp-validation-summary="All" class="text-danger"></div>

							<div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
								<p class="lead fw-normal mb-0 me-3">Sign in with</p>
								<button type="button" class="btn btn-custom btn-floating mx-1"><i class="fab fa-facebook-f"></i></button>
								<button type="button" class="btn btn-custom btn-floating mx-1"><i class="fab fa-twitter"></i></button>
								<button type="button" class="btn btn-custom btn-floating mx-1"><i class="fab fa-linkedin-in"></i></button>
							</div>

							<div class="divider d-flex align-items-center my-4">
								<p class="text-center fw-bold mx-3 mb-0">Or</p>
							</div>

							<!-- Email -->
							<div class="form-outline mb-4">
								<label asp-for="Email" class="form-label"></label>
								<div class="input-group">
									<span class="input-group-text"><i class="fas fa-envelope"></i></span>
									<input asp-for="Email" class="form-control form-control-lg" placeholder="Enter email address." />
								</div>
								<span asp-validation-for="Email" class="text-danger small"></span>
							</div>

							<!-- Password -->
							<div class="form-outline mb-3">
								<label asp-for="Password" class="form-label"></label>
								<div class="input-group">
									<span class="input-group-text"><i class="fas fa-lock"></i></span>
									<input asp-for="Password" class="form-control form-control-lg" placeholder="Enter password." />
								</div>
								<span asp-validation-for="Password" class="text-danger small"></span>
							</div>

							<!-- Remember me -->
							<div class="d-flex justify-content-between align-items-center">
								<div class="form-check mb-0">
									<input asp-for="RememberMe" class="form-check-input me-2" />
									<label asp-for="RememberMe" class="form-check-label"></label>
								</div>
								<a href="#!" class="btn btn-link text-white text-decoration-underline p-0">Forgot password?</a>
							</div>

							<div class="text-center text-lg-start mt-4 pt-2">
								<button type="submit" class="btn btn-custom btn-lg px-5">Login</button>
								<p class="small fw-bold mt-2 pt-1 mb-0">
									Don't have an account? <a href="#!" class="text-primary">Register</a>
								</p>
							</div>

						</form>
					</div>
				</div>
			</div>
		</section>
	</div>

	<!-- Footer -->
	<footer class="d-flex flex-column flex-md-row text-center text-md-start justify-content-between
                    py-4 px-4 px-xl-5 footer-custom">
		<div class="text-white mb-3 mb-md-0">
			Copyright © @DateTime.Now.Year. All rights reserved.
		</div>
		<div>
			<a href="#!" class="me-4"><i class="fab fa-facebook-f"></i></a>
			<a href="#!" class="me-4"><i class="fab fa-twitter"></i></a>
			<a href="#!" class="me-4"><i class="fab fa-google"></i></a>
			<a href="#!" class=""><i class="fab fa-linkedin-in"></i></a>
		</div>
	</footer>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
