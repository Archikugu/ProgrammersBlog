@using ProgrammersBlog.MvcUI.Areas.Admin.Models
@model UserViewModel

<li class="nav-item topbar-user dropdown hidden-caret">
	<a class="dropdown-toggle profile-pic" data-bs-toggle="dropdown" href="#" aria-expanded="false">
		<div class="avatar-sm">
			<img src="~/images/@Model.User.Picture" alt="..." class="avatar-img rounded-circle" />
		</div>
		<span class="profile-username">
			<span class="op-7">@Model.User.UserName</span>
		</span>
	</a>
	<ul class="dropdown-menu dropdown-user animated fadeIn">
		<li>
			<div class="user-box">
				<div class="avatar-lg">
					<img src="~/images/@Model.User.Picture" alt="image profile" class="avatar-img rounded" />
				</div>
				<div class="u-text">
					<h4>@Model.User.UserName</h4>
					<p class="text-muted">@Model.User.Email</p>
					<a href="profile.html" class="btn btn-xs btn-secondary btn-sm">View Profile</a>
				</div>
			</div>
		</li>
		<li>
			<div class="dropdown-divider"></div>
			<a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="ChangeDetails">Edit My Profile</a>
			<a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="PasswordChange">Change Password</a>
			<div class="dropdown-divider"></div>
			<a class="dropdown-item" asp-area="Admin" asp-controller="Auth" asp-action="Logout">Logout</a>
		</li>
	</ul>
</li>